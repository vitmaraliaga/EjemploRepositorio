<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="textoI">
        
        <item name="android:textColor">#843262</item>
        <item name="android:textSize">15pt</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10pt</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        
    </style>
    
    <style name="texto">
        <item name="android:textColor">#843262</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10pt</item>
        <item name="android:background">#fefefe</item>
        <item name="android:layout_marginBottom">5pt</item>
        <item name="android:ems">10</item>
        <item name="android:layout_centerHorizontal">true</item>
        
    </style>
    
    <style name="texto.loginText">
        <item name="android:inputType">textPersonName</item>
    </style>
    <style name="estiloBoton">
        <item name="android:textColor">#FEFEFE</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#843262</item>
        <item name="android:layout_marginBottom">5pt</item>
    </style>
    
</resources>
